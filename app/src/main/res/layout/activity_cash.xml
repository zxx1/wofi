<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <android.support.v7.widget.Toolbar
            android:id="@+id/credit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/text_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="押金充值" />


        </android.support.v7.widget.Toolbar>


        <TextView
            android:id="@+id/yuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="充值金额"
            android:layout_below="@+id/credit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="¥199(可退)"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/yuan"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/Pay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="24dp"
            android:background="#AFED56"
            android:gravity="center"
            android:text="立即充值"
            android:textColor="@color/white" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/tvPay"
            android:orientation="vertical"
            android:layout_marginTop="300dp"
            >

            <RadioButton
                android:id="@+id/weixin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:button="@null"
                android:drawableLeft="@drawable/weixin"
                android:drawableRight="@android:drawable/btn_radio"
                android:text="微信"
                android:textSize="23dp"
                android:drawablePadding="20dp"
                />

            <RadioButton
                android:id="@+id/alipay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:button="@null"
                android:textSize="23dp"
                android:drawableLeft="@drawable/alipay"
                android:drawableRight="@android:drawable/btn_radio"
                android:drawablePadding="20dp"

                />
        </RadioGroup>
    </RelativeLayout>

</layout>